    <Controls:MetroWindow.Flyouts>
        <Controls:FlyoutsControl DataContext="{Binding Access}">
            <Controls:Flyout Name="flyoutBasicPersonaInfo" Width="280"
                             Header="{Binding dataAccess.appSettings.uiSettings.language.PersonaInformation}"
                             IsModal="True" IsOpenChanged="flyoutBasicPersonaInfo_IsOpenChanged" IsPinned="False"
                             Position="Right" Theme="Accent">
                <StackPanel Margin="10" Orientation="Horizontal">
                    <StackPanel DataContext="{Binding dataAccess.appSettings.uiSettings.language}" Orientation="Vertical">
                        <Label Margin="5" Content="{Binding Name}" Foreground="White" />
                        <Label Margin="5" Content="{Binding Motto}" Foreground="White" />
                        <Label Margin="5" Content="{Binding Level}" Foreground="White" />
                        <Label Margin="5" Content="{Binding Cash}" Foreground="White" />
                        <Label Margin="5" Content="Boost" Foreground="White" />
                    </StackPanel>
                    <StackPanel Name="stackpanelBasicPersonaInfo" Width="190"
                                DataContext="{Binding CurrentSession.ActivePersona}"
                                Orientation="Vertical">
                        <TextBox Name="textboxPersonaName" Margin="5" Controls:TextBoxHelper.ClearTextButton="True"
                                 LostFocus="textboxPersonaName_LostFocus" MaxLength="14"
                                 Text="{Binding Name, Delay=1000}" />
                        <TextBox Name="textboxPersonaMotto" Margin="5" Controls:TextBoxHelper.ClearTextButton="True"
                                 MaxLength="30"
                                 Text="{Binding Motto, Delay=1000}" />
                        <Controls:NumericUpDown Name="numericPersonaLevel" Margin="5" InterceptMouseWheel="False"
                                                Maximum="60" Minimum="1" TextAlignment="Left"
                                                Value="{Binding Level, Delay=1000}" />
                        <Controls:NumericUpDown Name="numericPersonaCash" Margin="5" Delay="1000"
                                                Interval="5" IsTabStop="False" Maximum="1000000000"
                                                Minimum="0" Speedup="True" StringFormat="{}{0:N0}"
                                                TextAlignment="Left"
                                                Value="{Binding Cash, Delay=1000}" />
                        <Controls:NumericUpDown Name="numericPersonaBoost" Margin="5" Delay="1000"
                                                Interval="5" IsTabStop="False" Maximum="1000000000"
                                                Minimum="0" Speedup="True" StringFormat="{}{0:N0}"
                                                TextAlignment="Left"
                                                Value="{Binding Boost, Delay=1000}" />
                    </StackPanel>
                </StackPanel>
            </Controls:Flyout>
            <Controls:Flyout Name="flyoutDetailedPersonaInfo" Width="300"
                             Header="{Binding dataAccess.appSettings.uiSettings.language.DetailedPersonaInformation}"
                             IsModal="True" IsPinned="False" Position="Right"
                             Theme="Accent">
                <StackPanel Margin="10" Orientation="Vertical">
                    <TextBlock Margin="5" Text="Literally no idea what to put here. Do I add the ReputationInTotal stuff, do I make a graph of the user experience so far, WHAT DO I DO??????????????" TextWrapping="WrapWithOverflow" />
                </StackPanel>
            </Controls:Flyout>
            <Controls:Flyout Name="flyoutPersonaList" Width="490"
                             Header="{Binding dataAccess.appSettings.uiSettings.language.PersonaList}"
                             IsModal="True" IsPinned="False" Position="Right"
                             Theme="Accent">
                <StackPanel Margin="10" Orientation="Vertical">
                    <DataGrid Name="datagridPersonaList" Height="314" Margin="7,0,7,0"
                              AutoGenerateColumns="False" CanUserReorderColumns="True" FrozenColumnCount="1"
                              IsReadOnly="True"
                              ItemsSource="{Binding CurrentSession.PersonaList, Mode=OneWay}"
                              MouseDoubleClick="datagridPersonaList_MouseDoubleClick" SelectionMode="Single"
                              Style="{StaticResource AzureDataGrid}">
                        <DataGrid.Resources>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="TextOptions.TextFormattingMode" Value="Display" />
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Name}">
                                <DataGridTextColumn.Header>
                                    <TextBlock DataContext="{Binding DataContext.dataAccess.appSettings.uiSettings.language, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" FontWeight="Bold" Text="{Binding Name, Converter={StaticResource DataGridConverter}}" />
                                </DataGridTextColumn.Header>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Motto}">
                                <DataGridTextColumn.Header>
                                    <TextBlock DataContext="{Binding DataContext.dataAccess.appSettings.uiSettings.language, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" FontWeight="Bold" Text="{Binding Motto, Converter={StaticResource DataGridConverter}}" />
                                </DataGridTextColumn.Header>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Level}">
                                <DataGridTextColumn.Header>
                                    <TextBlock DataContext="{Binding DataContext.dataAccess.appSettings.uiSettings.language, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" FontWeight="Bold" Text="{Binding Level, Converter={StaticResource DataGridConverter}}" />
                                </DataGridTextColumn.Header>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Cash, StringFormat='{}{0:N0}'}">
                                <DataGridTextColumn.Header>
                                    <TextBlock DataContext="{Binding DataContext.dataAccess.appSettings.uiSettings.language, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" FontWeight="Bold" Text="{Binding Cash, Converter={StaticResource DataGridConverter}}" />
                                </DataGridTextColumn.Header>
                            </DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Boost, StringFormat='{}{0:N0}'}" Header="Boost" />
                            <DataGridTextColumn Binding="{Binding Cars.Count}">
                                <DataGridTextColumn.Header>
                                    <TextBlock DataContext="{Binding DataContext.dataAccess.appSettings.uiSettings.language, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" FontWeight="Bold" Text="{Binding AmountOfCars, Converter={StaticResource DataGridConverter}}" />
                                </DataGridTextColumn.Header>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Controls:Flyout>
            <Controls:Flyout Name="flyoutGaragePartInfo" Width="450"
                             DataContext="{Binding CurrentSession}"
                             Header="XElement" IsModal="True" IsPinned="True"
                             Position="Right" Theme="Accent">
                <StackPanel Margin="15,5,15,15" Orientation="Vertical">
                    <local:MVVMSyntax x:Name="tbGaragePartInfo" Width="420" Height="320"
                                      Background="White" FontSize="10pt" ShowLineNumbers="True"
                                      SyntaxHighlighting="XML" WordWrap="True" />
                </StackPanel>
            </Controls:Flyout>
            <Controls:Flyout Name="flyoutSettings" Width="280"
                             DataContext="{Binding dataAccess.appSettings}"
                             Header="{Binding uiSettings.language.Settings}"
                             IsModal="True" IsPinned="False" Position="Right"
                             Theme="Dark">
                <StackPanel Margin="10" Orientation="Vertical">
                    <StackPanel DataContext="{Binding uiSettings}" Orientation="Vertical">
                        <TextBlock Margin="3,0,0,5" FontFamily="Segoe UI Semibold" FontSize="13pt"
                                   Text="{Binding language.UISettings}" />
                        <StackPanel Orientation="Horizontal">
                            <StackPanel MinWidth="80" MaxWidth="110"
                                        DataContext="{Binding language}"
                                        Orientation="Vertical">
                                <Label Margin="5" Content="{Binding Background}" Foreground="White" />
                                <Label Margin="5" Content="{Binding Theme}" Foreground="White" />
                                <Label Margin="5" Content="{Binding Accent}" Foreground="White" />
                                <Label Margin="5" Content="{Binding DisplayLanguage}" Foreground="White" />
                            </StackPanel>
                            <StackPanel Name="stackpanelUISettings" MinWidth="140" MaxWidth="190"
                                        Orientation="Vertical">
                                <StackPanel Margin="5" Orientation="Horizontal">
                                    <Button Name="buttonBackground" MinWidth="100" MaxWidth="120"
                                            Click="button_ClickHandler"
                                            Content="{Binding language.Browse}" />
                                    <Button Name="buttonResetBackground" Width="25" Margin="5,0,0,0"
                                            Background="Red" Click="button_ClickHandler" Content="X" />
                                </StackPanel>
                                <ComboBox Name="comboBoxTheme" Margin="5"
                                          ItemsSource="{Binding style.list_Themes}"
                                          SelectedValue="{Binding style.Theme, Mode=TwoWay}" />
                                <ComboBox Name="comboBoxAccent" Margin="5"
                                          ItemsSource="{Binding style.list_Accents}"
                                          SelectedValue="{Binding style.Accent, Mode=TwoWay}" />
                                <ComboBox Name="comboBoxLanguage" Margin="5"
                                          ItemsSource="{Binding language.list_Languages}"
                                          SelectedValue="{Binding LanguageFile, Mode=TwoWay}" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Margin="0,5,0,0" Orientation="Vertical">
                        <TextBlock Margin="3,0,0,5" FontFamily="Segoe UI Semibold" FontSize="13pt"
                                   Text="{Binding uiSettings.language.HttpServerSettings}" />
                        <StackPanel Orientation="Horizontal">
                            <StackPanel MinWidth="80" MaxWidth="110"
                                        DataContext="{Binding uiSettings.language}"
                                        Orientation="Vertical">
                                <Label Margin="5" Content="{Binding Catalog}" Foreground="White" />
                                <Label Margin="5" Content="{Binding GameplayMod}" Foreground="White" />
                            </StackPanel>
                            <StackPanel Name="stackpanelHttpServerSettings" MinWidth="140" MaxWidth="190"
                                        DataContext="{Binding httpServerSettings}"
                                        Orientation="Vertical">
                                <ComboBox Name="comboBoxCatalog" Margin="5"
                                          ItemsSource="{Binding list_Catalogs}"
                                          SelectedValue="{Binding SelectedCatalog, Mode=TwoWay}" />
                                <ComboBox Name="comboBoxGameplayMod" Margin="5"
                                          ItemsSource="{Binding list_GameplayMods}"
                                          SelectedValue="{Binding SelectedGameplayMod, Mode=TwoWay}" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Controls:Flyout>
        </Controls:FlyoutsControl>
    </Controls:MetroWindow.Flyouts>
</Controls:MetroWindow>